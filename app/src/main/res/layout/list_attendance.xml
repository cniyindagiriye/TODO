<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16dp"
    android:paddingVertical="3dp">
    <TextView
        android:id="@+id/txtRegNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="@string/_219000001"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/chkAction"
        app:layout_constraintBottom_toBottomOf="@id/chkAction"/>

    <ImageButton
        android:id="@+id/btnStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_yes"
        android:layout_marginEnd="64dp"
        app:layout_constraintEnd_toStartOf="@id/chkAction"
        app:layout_constraintTop_toTopOf="@id/chkAction"
        app:layout_constraintBottom_toBottomOf="@id/chkAction"
        android:contentDescription="@string/todo" />

    <CheckBox
        android:id="@+id/chkAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>